@using LINQ_WebApp.Models;
@model List<ProductGroupViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">welcome</h1>
</div>


<div class="panel-body">
    @foreach (var item in Model)
    {
       
        <table class="table table-striped table-condensed">
            <thead>
                <tr><th>@item.Key</th></tr>
            </thead>
        </table>


        <table class="table table-striped table-condensed">
            <thead>
                <tr><th>Id</th><th>Name</th><th>Category</th><th>Price</th></tr>
            </thead>

            <tbody>


                @foreach (var product in item.Products)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Category</td>
                        <td>@product.Price</td>

                    </tr>
                }


            </tbody>
        </table>
        <br />
        <br />
    }
    <a asp-action="Index">  <button type="button" class="btn btn-primary"> whole list</button> </a>
    <a asp-action="Query1"> <button type="button" class="btn btn-dark"> Query 1</button> </a>
    <a asp-action="Query2"> <button type="button" class="btn btn-dark"> Query 2</button> </a>
    <a asp-action="Query3"> <button type="button" class="btn btn-dark"> Query 3</button> </a>
    <a asp-action="Query4"> <button type="button" class="btn btn-dark"> Query 4</button> </a>
    <a asp-action="Query5"> <button type="button" class="btn btn-dark"> Query 5</button> </a>

</div>
<br />
<br />

